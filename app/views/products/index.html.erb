<div class="col-md-10">
  <h3><%= t(:product_list) %></h3>
</div>
<div class="col-md-2">
  <%= link_to t(:new_product), new_product_path, class: "btn btn-danger" %>
</div>
<div class="col-md-12">
  <table class="table">
    <thead>
      <tr>
        <th><%= Product.human_attribute_name(:id) %></th>
        <th><%= Product.human_attribute_name(:product_name) %></th>
        <th><%= Product.human_attribute_name(:created_at) %></th>
        <th><%= Product.human_attribute_name(:updated_at) %></th>
        <th colspan="2"><%= t(:operations) %></th>
      </tr>
    </thead>
    <tbody>
      <%= render @products %>
    </tbody>
  </table>
</div>
